CreateIndex({
  "name": "searchEvents",
  "terms": [{
    "binding": "search"
  }],
  "source": {
    "collection": Collection("_events"),
    "fields": {
      "search": Query(Lambda(["row"], Union(NGram(LowerCase(Select(["data", "name"], Var("row"))), 2, 3), NGram(LowerCase(Select(["data", "description"], Var("row"))), 2, 3))))
    }
  }
})